{
  "name": "conda-actions",
  "version": "0.1.0",
  "description": "Detect whether an issue exists in the specified project.",
  "author": {
    "name": "Anaconda, Inc.",
    "url": "https://www.anaconda.com/"
  },
  "contributors": [
    {
      "name": "Ken Odegard",
      "email": "kodegard@anaconda.com"
    }
  ],
  "license": "BSD 3-Clause",
  "homepage": "https://conda.github.io/actions",
  "bugs": "https://conda.github.io/actions/issues",
  "repository": "github:conda/actions",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf app",
    "prebuild": "npm run clean && node -p \"'export const VERSION: string = ' + JSON.stringify(require('./package.json').version)\" > src/version.ts",
    "build": "tsc && ncc build --out app",
    "app": "npm run build && node -r ts-node/register/transpile-only -r tsconfig-paths/register app/index.js",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "docs": "typedoc"
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0",
    "commander": "^8.3.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.12",
    "@vercel/ncc": "^0.33.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.2"
  },
  "engines": {
    "node": ">= 16.6.1",
    "npm": ">= 7.20.3"
  }
}
